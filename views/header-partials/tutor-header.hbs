<style>
    .header {
        --background-color: black !important;
        --default-color: #ffffff;
        --heading-color: #ffffff;
        color: var(--default-color);
        background-color: var(--background-color);
        padding: 20px 0;
        transition: all 0.5s;
        z-index: 997;
    }
</style>

<header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center">

        <a href="/" class="logo d-flex align-items-center me-auto">
            <!-- Uncomment the line below if you also wish to use an image logo -->
            <!-- <img src="assets/img/logo.png" alt=""> -->
            <h1 class="sitename">Tutor Dashboard</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="/tutor" class="active">Dashboard<br></a></li>
                <li><a href="/tutor/all-users">Manage Students</a></li>
                <li><a href="/tutor/subject/all-subjects">Manage Subjects</a></li>
                <li><a href="/tutor/all-feedbacks">Feedbacks</a></li>

                {{#if tutor}}
                <li class="dropdown"><a href="#"><span>{{tutor.Tutorname}} </span> <i
                            class="bi bi-chevron-down toggle-dropdown"></i></a>
                    <ul>
                        <li>
                            <a href="/tutor/profile">
                                <div class="d-flex gap-2"><i class="bi bi-person-circle mt-1"></i>My Profile</div>
                            </a>
                        </li>
                        <li>
                            <a href="/tutor/signout">
                                <div class="d-flex gap-2"><i class="bi bi-box-arrow-right mt-1"></i>Signout</div>
                            </a>
                        </li>

                    </ul>
                </li>
                {{else}}
                <li class="dropdown"><a href="#"><span>Signin/Signup</span> <i
                            class="bi bi-chevron-down toggle-dropdown"></i></a>
                    <ul>
                        <li>
                            <a href="/signin">
                                <div class="d-flex gap-2"><i class="bi bi-person-circle mt-1"></i>Student</div>
                            </a>
                        </li>
                        <li>
                            <a href="/tutor/signin">
                                <div class="d-flex gap-2"><i class="bi bi-people mt-1"></i>Tutor</div>
                            </a>
                        </li>
                        {{!-- <li>
                            <a href="/company/signin">
                                <div class="d-flex gap-2"><i class="bi bi-buildings-fill mt-1"></i>Company</div>
                            </a>
                        </li> --}}
                    </ul>
                </li>
                {{/if}}
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>


    </div>
</header>