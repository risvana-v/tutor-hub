<section>
    {{#if orders}}
    <div class="container my-5">
        <h3 class="mt-5 mb-3">My Courses</h3>
        <div class="table-responsive">
            <table class="table" id="table">
                <thead class="table-dark">
                    <tr class="align-middle">
                        <th scope="col">Date</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Payment</th>
                        {{!-- <th scope="col">Status</th>
                        <th scope="col">Cancel</th> --}}
                        <th scope="col">View</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each orders}}
                    <tr class="align-middle">
                        <td>{{this.orderObject.date}}</td>

                        <td>{{this.orderObject.totalAmount}}/-</td>
                        <td>{{this.orderObject.paymentMethod}}</td>
                        {{!-- <td>{{this.orderObject.status}}</td> --}}
                        {{!-- <td>
                            <a href="/cancel-order/{{this._id}}"
                                onclick="return confirm('Are You Sure to Cancel This Order ?')"
                                class="btn btn-danger">Cancel</a>
                        </td> --}}
                        <td>
                            <a href="/view-ordered-products/{{this._id}}" class="btn btn-primary">View Course</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{else}}
    <div class="container mt-5">
        <div class="alert alert-secondary" role="alert">
            <h4 class="alert-heading">You Have Ordered Nothing!</h4>
            <hr>
            <p class="mb-0">You need to Order soemthing from the Shopping Cart/Cart.</p>
        </div>
        <div class="row">
            <a href="/" class="btn btn-primary">Add Products</a>
        </div>
    </div>
    {{/if}}
</section>