<section>
    <div class="container mt-2"><br><br>
        <a href="/orders" class="btn btn-dark">back</a>
        {{#each products}}
        <br><br>
        <div class="card p-4 mx-auto">
            <div class="row">
                <div class="col-lg-6">
                    <img src="/images/subject-images/{{this.product._id}}.png" class="card-img-top" alt="phone-image"
                        style="height: 17rem;">
                </div>
                <div class="col-lg-6">
                    <div class="card-body pb-1">
                        <div style="display: flex; justify-content: space-between;">
                            <h5 class="card-title">{{this.product.name}}</h5>
                            <p class="card-text"><small>â‚¹{{this.product.Price}}</small></p>
                        </div>
                        <p class="card-text">{{this.product.desc}}</p>

                        <!-- Sessions and Links -->
                        <div class="mt-3">
                            <h6>Sessions:</h6>
                            <ul>
                                {{#each this.product.name}} <!-- Looping through the name array -->
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>

                        <div class="mt-3">
                            <h6>Links:</h6>
                            <ul>
                                {{#each this.product.link}} <!-- Looping through the link array -->
                                <li><a href="{{this}}" target="_blank">{{this}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}


</section>