<style>
    label {
        font-size: 13px;
        margin-bottom: 10px;
    }
</style>
<br><br>
<!-- Login Wrapper Area -->
<div class="login-wrapper d-flex mt-5  align-items-center justify-content-center mt-3">
    <div class="container-lg">
        <div class="text-center px-4"><img class="login-intro-img" src="assets/img/bg-img/36.png" alt=""></div><br>
        <!-- Register Form -->

        <div class="">
            <a href="/tutor/profile" class="btn btn-sm btn-dark">
                <i class="bi bi-arrow-left-short "></i> Back</a>
        </div>

        <div class="card shadow p-4 mt-3">
            <div class="register-form mt-4">
                <h4 class="mb-5 text-left">Edit Your Profile</h4>

                <form action="/tutor/edit-profile/{{tutorProfile._id}}" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control" type="text" id="Tutorname" name="Tutorname"
                                    value="{{tutorProfile.Tutorname}}" pattern="[A-Za-z]+"
                                    title="Only letters are allowed" required>
                                {{#if errors.tutorname}}
                                <small class="text-danger">{{errors.tutorname}}</small>
                                {{/if}}
                            </div>


                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" type="email" id="Email" name="Email"
                                    value="{{tutorProfile.Email}}" required>
                                {{#if errors.email}}
                                <small class="text-danger">{{errors.email}}</small>
                                {{/if}}
                            </div>

                            <div class="form-group">
                                <label>Phone Number</label>
                                <input class="form-control" type="number" id="Phone" name="Phone"
                                    value="{{tutorProfile.Phone}}" required>
                                {{#if errors.phone}}
                                <small class="text-danger">{{errors.phone}}</small>
                                {{/if}}
                            </div>

                            <div class="form-group">
                                <label>Address</label>
                                <textarea class="form-control" id="Address" name="Address"
                                    required>{{tutorProfile.Address}}</textarea>
                                {{#if errors.address}}
                                <small class="text-danger">{{errors.address}}</small>
                                {{/if}}
                            </div>

                            <div class="row g-1">
                                <div class="col-lg-7">
                                    <div class="form-group">
                                        <label>City</label>
                                        <input class="form-control" type="text" id="City" name="City"
                                            value="{{tutorProfile.City}}" pattern="[A-Za-z]+"
                                            title="Only letters are allowed" required>
                                        {{#if errors.city}}
                                        <small class="text-danger">{{errors.city}}</small>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <label>Pincode</label>
                                        <input class="form-control" type="number" id="Pincode" name="Pincode"
                                            value="{{tutorProfile.Pincode}}" required>
                                        {{#if errors.pincode}}
                                        <small class="text-danger">{{errors.pincode}}</small>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Your Qualifications</label>
                                <input class="form-control" type="text" id="qualifications" name="qualifications"
                                    value="{{tutorProfile.qualifications}}" required>
                                {{!-- {{#if errors.phone}}
                                <small class="text-danger">{{errors.phone}}</small>
                                {{/if}} --}}
                            </div>

                            {{!-- <div class="form-group">
                                <label>Certificate PDF</label>
                                <input class="form-control" type="file" id="certificate" name="certificate"
                                    value="{{tutorProfile.certificate}}" required>

                            </div> --}}

                            <div class="form-group">
                                <label>Profile Picture</label>
                                <img src="/images/profile-images/{{tutorProfile._id}}.png" alt=""
                                    style="width: 5rem; margin-bottom: 8px;" id="imgView">
                                <input class="form-control" type="file" id="profile" name="profile"
                                    value="{{tutorProfile.profile}}" onchange="viewImage(event)">
                                {{!-- {{#if errors.phone}}
                                <small class="text-danger">{{errors.phone}}</small>
                                {{/if}} --}}
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn mt-4 btn-primary">Update Profile</button>
                    <a href="/tutor/profile" class="btn mt-4 btn-secondary">Cancel</a>
                </form>
            </div>
        </div>


    </div>
</div>
<br>


<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>