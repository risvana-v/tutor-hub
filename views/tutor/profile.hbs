<style>
    label {
        font-size: 13px;
        margin-bottom: 10px;
    }
</style>
<!-- Login Wrapper Area -->
<div class="login-wrapper d-flex mt-5  align-items-center justify-content-center">
    <div class="container-lg">
        <div class="text-center px-4"><img class="login-intro-img" src="assets/img/bg-img/36.png" alt=""></div>
        <br><br><br>
        <!-- Register Form -->

        <div class="d-flex justify-content-between">
            <a href="/tutor" class="btn btn-sm btn-dark">
                <i class="bi bi-arrow-left-short "></i> Back</a>
            {{#if tutor}}
            <div>
                <a href="/tutor/edit-profile/{{tutor._id}}" class="btn btn-sm btn-primary">
                    <i class="bi bi-pen "></i> Add Qualifications</a>
                <a href="/tutor/edit-profile/{{tutor._id}}" class="btn btn-sm btn-primary">
                    <i class="bi bi-pen "></i> Edit Profile</a>
            </div>

            {{/if}}
        </div>

        <div class="card shadow p-4 mb-4 mt-3">

            <div class="register-form mt-4">
                <h4 class="mb-5 text-left">My Profile</h4>
                {{#if tutor}}
                <div class="row gap-3">
                    {{#if tutor.qualifications}} <!-- Check if qualifications exist -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Profile Picture</label><br>
                            <img src="/images/profile-images/{{tutor._id}}.png" width="100px">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Your Certificate</label><br>
                            <a href="/images/certificates/{{tutor._id}}.pdf" class="btn btn-dark">View My
                                Certificate</a>
                        </div>
                    </div>
                    {{/if}}
                    <br><br><br>
                    <form action="#!" method="">
                        <div class="row g-1">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input class="form-control" type="text" name="Fname" value={{tutor.Tutorname}}
                                        readonly>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label>Email</label>

                            <input class="form-control" type="email" name="Email" value={{tutor.Email}} readonly>
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>

                            <input class="form-control" type="number" name="Phone" value={{tutor.Phone}} readonly>
                        </div>
                        <div class="form-group">
                            <label>Address</label>

                            <textarea class="form-control" name="Address" readonly>{{tutor.Address}} </textarea>
                        </div>
                        <div class="row g-1">
                            <div class="col-lg-7">
                                <div class="form-group">
                                    <label>City</label>

                                    <input class="form-control" type="text" name="District" value={{tutor.City}}
                                        readonly>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label>Pincode</label>

                                    <input class="form-control" type="number" name="Pincode" value={{tutor.Pincode}}
                                        readonly>
                                </div>
                            </div>
                        </div>

                    </form>
                    {{/if}}
                </div>

            </div>

        </div>
    </div>