<style>
    /* Set chat window height to fill the screen */
    .chat-window {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Chat messages area should take available space */
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }

    /* Fix input at the bottom */
    .chat-input {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 10px;
        background-color: white;
        border-top: 1px solid #ccc;
    }

    .header {
        --background-color: rgba(0, 0, 0, 0);
        --default-color: #ffffff;
        --heading-color: #ffffff;
        color: var(--default-color);
        background-color: black;
        padding: 20px 0;
        transition: all 0.5s;
        z-index: 997;
    }
</style>
<br><br><br><br><br>
<div class="container-fluid chat-window">
    <!-- Chat messages area -->
    <div class="chat-messages">
        {{#each chats}}
        <div class="message">
            <p><strong>{{this.name}}</strong> : {{this.msg}} </p>
        </div>

        {{/each}}

        {{#each replies}}
        <div class="message">
            <p><strong>Staff</strong> : {{this.reply}} </p>
        </div>
        {{/each}}

        <!-- More messages can be added here -->
    </div>

    <!-- Fixed input area at the bottom -->
    <form action="/add-chat" method="post">
        <input type="hidden" name="tutorId" value="{{tutor._id}}" />

        <div class="chat-input">
            <div class="input-group">
                <input type="hidden" name="userId" value={{user._id}}>
                <input type="hidden" name="name" value={{user.Fname}}>
                <input type="text" class="form-control" name="msg" placeholder="Type your message..."
                    aria-label="Type your message">
                <button class="btn btn-primary" type="submit">Send</button>
            </div>
        </div>
    </form>
</div>