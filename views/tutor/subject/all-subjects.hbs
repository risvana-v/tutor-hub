<style>
    .page-container {
        margin-top: 140px;
    }

    .thead-dark table thead {
        background-color: black !important;
        color: white;
    }
</style>

<div class="page-container">
    <div class="container-md">
        <div class="d-flex mb-4 justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Your Subjects</h4>
            <a href="/tutor/add-subject" class="btn btn-dark">+ Add New Subject</a>
        </div>

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Image</th>
                    <th scope="col">Subject Name</th>
                    <th scope="col">Rate</th>
                    <th scope="col">Desciption</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{incremented @index}}</th>
                    <td><img src="/images/subject-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                    <td>{{this.name}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.desc}}</td>
                    <td><a href="/tutor/edit-subject/{{this._id}}" class="btn btn-primary mb-2">Edit</a>
                        <a href="/tutor/delete-subject/{{this._id}}" class="btn btn-danger mb-2"
                            onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>